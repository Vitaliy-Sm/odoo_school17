<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="hospital_patient_visits_view_tree" model="ir.ui.view">
        <field name="name">hospital.patient.visits.tree</field>
        <field name="model">hospital.patient.visits</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" placeholder="Name"/>
                <field name="doctor_id"/>
                <field name="patient_id"/>
                <field name="planned_visit_date"/>
                <field name="visit_date"/>
                <field name="status"/>
                <field name="diagnosis_ids"/>
            </tree>
        </field>
    </record>
    <record id="hospital_patient_visits_view_form" model="ir.ui.view">
        <field name="name">hospital.patient.visits.form</field>
        <field name="model">hospital.patient.visits</field>
        <field name="arch" type="xml">
            <form>
                <header></header>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="doctor_id"/>
                        <field name="patient_id"/>
                        <field name="planned_visit_date"/>
                        <field name="visit_date"/>
                        <field name="status"/>
                        <field name="diagnosis_ids"/>
                        <field name="is_visit_done"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="hospital_patient_visits_act_window" model="ir.actions.act_window">
        <field name="name">Patient visits</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hospital.patient.visits</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="hr_hospital_patient_visits_view"
              action="hospital_patient_visits_act_window"
              parent="hr_hospital_patient_menu"
              name="Patient visits"
              sequence="6" />
</odoo>
